{
  "name": "paperback-mdchecker",
  "version": "1.0.0",
  "description": "A chapter update check managing server",
  "main": "index.js",
  "repository": "git@github.com:henderea/paperback-mdchecker.git",
  "author": "Eric Henderson <henderea@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "watch:app": "nodemon bin/app-test.ts",
    "watch:wp": "NODE_ENV=development SHOW_PROGRESS=false webpack --watch",
    "start": "concurrently \"npm run watch:app\" \"npm run watch:wp\" --names \"ðŸ’»,ðŸ“¦\" --prefix name",
    "clean:builds": "rm -rf build",
    "clean:wp": "rm -rf public/generated",
    "clean": "npm run clean:builds && npm run clean:wp",
    "build:app": "./scripts/ncc-build-release.sh app",
    "build:update-check": "./scripts/ncc-build-release.sh update-check",
    "build:wp": "NODE_ENV=production webpack",
    "build": "npm run build:wp && npm run build:app && npm run build:update-check"
  },
  "dependencies": {
    "entities": "^4.5.0",
    "express": "^4.18.2",
    "got": "12.6.1",
    "html-minifier-terser": "^7.2.0",
    "http-terminator": "^3.2.0",
    "lodash": "^4.17.21",
    "node-schedule": "^2.1.1",
    "nunjucks": "^3.2.4",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/plugin-transform-typescript": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@types/express": "^4.17.17",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.0",
    "@types/node-schedule": "^2.1.0",
    "@types/nunjucks": "^3.2.4",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.0",
    "ansi-escapes": "^6.2.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "eslint-config-henderea": "^1.1.18",
    "eslint-plugin-import": "^2.29.0",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.1",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.4",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": "henderea"
  },
  "nodemonConfig": {
    "ignore": [
      "public",
      "src",
      "node_modules",
      ".git",
      "scripts"
    ],
    "watch": [
      "bin",
      "lib",
      "views"
    ],
    "ext": "*.ts,*.json,*.njk"
  }
}
