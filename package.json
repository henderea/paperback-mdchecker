{
  "name": "paperback-mdchecker",
  "version": "1.0.0",
  "description": "A chapter update check managing server",
  "main": "index.js",
  "repository": "git@github.com:henderea/paperback-mdchecker.git",
  "author": "Eric Henderson <henderea@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "ts-node ./bin/index.ts",
    "clean": "rm -rf build",
    "build": "yarn build:styles && yarn build:app && yarn build:update-check",
    "build:app": "./scripts/ncc-build-release.sh app",
    "build:update-check": "./scripts/ncc-build-release.sh update-check",
    "build:styles": "rm -rf public/css/generated/* && sass --style=compressed src/scss:public/css/generated"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "entities": "^4.5.0",
    "express": "^4.18.2",
    "got": "12.6.1",
    "http-terminator": "^3.2.0",
    "lodash": "^4.17.21",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.0",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.48.0",
    "eslint-config-henderea": "1.1.13",
    "eslint-plugin-import": "^2.28.1",
    "sass": "^1.66.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": "henderea"
  }
}
